<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane stylesheets="@semulator.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controllers.RootController">

  <!-- TOP BAR -->
  <top>
    <VBox spacing="8" BorderPane.alignment="CENTER_LEFT">
      <children>
        <ToolBar prefHeight="48">
          <items>
            <Button onAction="#onLoadFile" text="Load File" />
            <Separator orientation="VERTICAL" />
            <Label onMouseEntered="#mouseEnter" onMouseExited="#mouseExit" text="Currently Loaded:" />
            <Label fx:id="lblFilePath" prefHeight="17.0" prefWidth="761.0" textOverrun="LEADING_ELLIPSIS" />
            <Pane />
          </items>
        </ToolBar>

        <!-- רווח מתחת לטולבר, עם הבקרים שהוספת -->
        <Pane prefHeight="46.0" prefWidth="1616.0">
          <children>
            <Button layoutX="14.0" layoutY="8.0" text="Program\Function selector" />
            <Separator layoutX="204.0" layoutY="3.0" orientation="VERTICAL" prefHeight="41.0" prefWidth="11.0" />
            <Button fx:id="btnCollapse" layoutX="216.0" layoutY="7.0" onAction="#onCollapse" text="Collapse" />
            <HBox layoutX="306.0" layoutY="6.0" spacing="6">
              <children>
                <Label alignment="CENTER" prefHeight="30.0" prefWidth="45.0" text="Degree:" />
                <Spinner fx:id="spnDegree" editable="true">
                  <valueFactory>
                    <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="0" max="0" min="0" />
                  </valueFactory>
                </Spinner>
                <Label fx:id="lblMaxDegree" prefHeight="31.0" prefWidth="16.0" text="/ 0" />
              </children>
            </HBox>
            <Button fx:id="btnExpand" layoutX="561.0" layoutY="6.0" onAction="#onExpand" text="Expand" />
                  <Separator layoutX="637.0" layoutY="1.0" orientation="VERTICAL" prefHeight="41.0" prefWidth="11.0" />
                  <Button fx:id="btnHighlightSelector" layoutX="658.0" layoutY="6.0" mnemonicParsing="false" text="Vairable\Label Selector" onAction="#onHighLight" />
          </children>
        </Pane>

      </children>
    </VBox>
  </top>

  <!-- CENTER -->
  <center>
    <!-- שני פנלים בלבד: instructions (שכבר כולל מתחתיו את Expand Instruction) ו-execution -->
    <SplitPane dividerPositions="0.62">
      <items>
        <fx:include fx:id="instructions" source="instructions.fxml" />
        <fx:include fx:id="execution" source="execution.fxml" />
      </items>
    </SplitPane>
  </center>

  <!-- BOTTOM: Status bar -->
  <bottom>
    <HBox spacing="12">
      <children>
        <Label text="Engine:" />
        <Label fx:id="lblEngineState" text="Idle" />
        <Separator orientation="VERTICAL" />
        <Label text="Selection:" />
        <Label fx:id="lblSelection" text="—" />
        <Pane />
        <Label text="FPS:" />
        <Label fx:id="lblFps" text="0" />
      </children>
      <padding>
        <Insets bottom="8" left="12" right="12" top="8" />
      </padding>
    </HBox>
  </bottom>
</BorderPane>
