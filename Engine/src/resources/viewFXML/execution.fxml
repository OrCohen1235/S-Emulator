<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ui.controllers.ExecutionController">

  <children>
    <TitledPane expanded="true" text="Debugger / Execution" VBox.vgrow="ALWAYS">
      <content>
        <VBox spacing="8">
          <children>
            <ToolBar>
              <items>
                <Button fx:id="btnRun" onAction="#onRun" text="Run" />
                <Button fx:id="btnDebug" onAction="#onDebug" text="Debug" />
                <Button fx:id="btnStepOver" onAction="#onStepOver" text="Step Over" />
                <Button fx:id="btnClear" onAction="#onStop" text="Stop" />
                <Button fx:id="btnResume" onAction="#onResume" prefWidth="58.0" text="Resume" />
              </items>
            </ToolBar>

            <GridPane hgap="10" prefHeight="257.0" prefWidth="684.0" vgap="10">
              <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="421.0" minHeight="196.0" prefHeight="204.0" vgrow="ALWAYS" />
                <RowConstraints maxHeight="229.0" minHeight="90.0" prefHeight="125.0" vgrow="SOMETIMES" />
              </rowConstraints>

              <!-- Variables -->
              <TitledPane expanded="true" maxHeight="Infinity" text="Variables"
                          GridPane.columnIndex="0" GridPane.hgrow="ALWAYS"
                          GridPane.rowIndex="0" GridPane.vgrow="ALWAYS">
                <content>
                  <fx:include fx:id="varsTable" source="varsTable.fxml" />
                </content>
              </TitledPane>

              <!-- Execution Inputs -->
              <TitledPane expanded="true" maxHeight="Infinity" prefWidth="337.0" text="Execution Inputs"
                          GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"
                          GridPane.rowIndex="0" GridPane.vgrow="ALWAYS">
                <content>
                  <VBox spacing="6">
                    <children>
                      <ScrollPane fx:id="inputsScroll" fitToWidth="true" hbarPolicy="NEVER"
                                  prefHeight="105.0" prefWidth="316.0" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
                        <content>
                          <VBox fx:id="inputsContainer" fillWidth="true" spacing="6" stylesheets="@execution.css" />
                        </content>
                      </ScrollPane>
                      <Pane VBox.vgrow="ALWAYS" />
                      <HBox fx:id="hBoxStart" alignment="TOP_CENTER">
                        <children>
                          <Button fx:id="btnStart" onAction="#onStart" text="Start" />
                        </children>
                      </HBox>
                    </children>
                  </VBox>
                </content>
              </TitledPane>

              <!-- Cycles -->
              <TitledPane expanded="true" prefHeight="65.0" prefWidth="684.0" text="Cycles"
                          GridPane.columnIndex="0" GridPane.columnSpan="2"
                          GridPane.hgrow="ALWAYS" GridPane.rowIndex="1">
                <content>
                  <VBox spacing="8">
                    <children>
                      <HBox alignment="CENTER_LEFT" spacing="6">
                        <children>
                          <Label text="Total cycles:" />
                          <Label fx:id="lblCycles" text="0" />
                        </children>
                      </HBox>
                      <ProgressBar fx:id="prgExecution" maxWidth="Infinity" progress="0.0" />
                    </children>
                    <padding>
                      <Insets bottom="8" left="8" right="8" top="8" />
                    </padding>
                  </VBox>
                </content>
              </TitledPane>
            </GridPane>
          </children>
        </VBox>
      </content>
    </TitledPane>
  </children>

  <padding>
    <Insets bottom="12" left="12" right="12" top="12" />
  </padding>
</VBox>