<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>

<BorderPane stylesheets="@semulator.css"
            prefWidth="1200.0" prefHeight="800.0"
            minWidth="1000.0" minHeight="600.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.RootController">

  <!-- TOP -->
  <top>
    <VBox spacing="8" BorderPane.alignment="CENTER_LEFT">
      <children>

        <!-- Toolbar -->
        <ToolBar prefHeight="48">
          <items>
            <Separator orientation="VERTICAL"/>

            <!-- User name -->
            <Label text="UserName:"/>
            <Label fx:id="lblUserName" textOverrun="LEADING_ELLIPSIS"/>

            <!-- Space before variable -->
            <Region prefWidth="12"/>

            <!-- Spacer pushes credits to right -->
            <Pane HBox.hgrow="ALWAYS"/>

            <!-- Credits -->
            <Label text="Credits:"/>
            <Label fx:id="lblCreditsNumber" textOverrun="LEADING_ELLIPSIS"/>
          </items>
        </ToolBar>

        <!-- Second row below toolbar -->
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 8;">
          <children>
            <Button text="Program\Function selector" onAction="#onFunctionSelector"/>
            <Separator orientation="VERTICAL" prefHeight="30.0"/>
            <Button fx:id="btnCollapse" onAction="#onCollapse" text="Collapse"/>
            <HBox spacing="6" alignment="CENTER_LEFT">
              <children>
                <Label alignment="CENTER" prefHeight="30.0" prefWidth="45.0" text="Degree:"/>
                <Spinner fx:id="spnDegree" editable="true">
                  <valueFactory>
                    <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="0" max="0" min="0"/>
                  </valueFactory>
                </Spinner>
                <Label fx:id="lblMaxDegree" prefHeight="31.0" text="/ 0"/>
              </children>
            </HBox>
            <Button fx:id="btnExpand" onAction="#onExpand" text="Expand"/>
            <Separator orientation="VERTICAL" prefHeight="30.0"/>
            <Button fx:id="btnHighlightSelector" mnemonicParsing="false"
                    onAction="#onHighLight"
                    text="Variable\Label Selector"/>
            <Pane HBox.hgrow="ALWAYS"/>

            <Label text="Architecture:" />
            <ComboBox fx:id="cmbArchitecture"
                      promptText="Select Architecture"
                      prefWidth="120">
              <items>
                <FXCollections fx:factory="observableArrayList">
                  <String fx:value="Choose" />
                  <String fx:value="I" />
                  <String fx:value="II" />
                  <String fx:value="III" />
                  <String fx:value="IV" />
                </FXCollections>
              </items>
            </ComboBox>

            <!-- Return to Dashboard Button -->
            <Button text="← Dashboard" onAction="#onReturnToDashboard"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white;">
              <tooltip>
                <Tooltip text="Return to Dashboard"/>
              </tooltip>
            </Button>
          </children>
        </HBox>

      </children>
    </VBox>
  </top>

  <!-- CENTER -->
  <center>
    <SplitPane dividerPositions="0.62" VBox.vgrow="ALWAYS">
      <items>
        <fx:include fx:id="instructions" source="instructions.fxml"/>
        <VBox spacing="8" VBox.vgrow="ALWAYS">
          <children>
            <fx:include fx:id="execution" source="execution.fxml"/>
          </children>
        </VBox>
      </items>
    </SplitPane>
  </center>

  <!-- BOTTOM -->
  <bottom>
    <HBox alignment="CENTER_LEFT" spacing="12">
      <children>
        <Label text="Engine:"/>
        <Label fx:id="lblEngineState" text="Idle"/>
        <Separator orientation="VERTICAL"/>
        <Label text="Selection:"/>
        <Label fx:id="lblSelection" text="—"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Label fx:id="lblStatus" text=""/>
        <ProgressBar fx:id="progressBar" prefWidth="220.0" progress="0.0"/>
        <Separator orientation="VERTICAL"/>
        <Label text="FPS:"/>
        <Label fx:id="lblFps" text="0"/>
      </children>
      <padding>
        <Insets bottom="8" left="12" right="12" top="8"/>
      </padding>
    </HBox>
  </bottom>

</BorderPane>