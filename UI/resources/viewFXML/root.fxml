<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@semulator.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RootController">

  <top>
    <VBox spacing="8" BorderPane.alignment="CENTER_LEFT">
      <children>
        <ToolBar prefHeight="48">
          <items>
            <Button onAction="#onLoadFile" text="Load File" />
            <Separator orientation="VERTICAL" />
            <Label text="Currently Loaded:" />
            <Label fx:id="lblFilePath" prefHeight="17.0" prefWidth="761.0" textOverrun="LEADING_ELLIPSIS" />
            <Pane />
          </items>
        </ToolBar>

        <Pane prefHeight="46.0" prefWidth="1616.0">
          <children>
            <Button layoutX="14.0" layoutY="8.0" text="Program\Function selector" onAction="#onFunctionSelector"/>
            <Separator layoutX="204.0" layoutY="3.0" orientation="VERTICAL" prefHeight="41.0" prefWidth="11.0" />
            <Button fx:id="btnCollapse" layoutX="216.0" layoutY="7.0" onAction="#onCollapse" text="Collapse" />
            <HBox layoutX="306.0" layoutY="6.0" spacing="6">
              <children>
                <Label alignment="CENTER" prefHeight="30.0" prefWidth="45.0" text="Degree:" />
                <Spinner fx:id="spnDegree" editable="true">
                  <valueFactory>
                    <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="0" max="0" min="0" />
                  </valueFactory>
                </Spinner>
                <Label fx:id="lblMaxDegree" prefHeight="31.0" prefWidth="40.0" text="/ 0" />
              </children>
            </HBox>
            <Button fx:id="btnExpand" layoutX="580.0" layoutY="7.0" onAction="#onExpand" text="Expand" />
            <Separator layoutX="657.0" layoutY="1.0" orientation="VERTICAL" prefHeight="41.0" prefWidth="11.0" />
            <Button fx:id="btnHighlightSelector" layoutX="679.0" layoutY="6.0" mnemonicParsing="false" onAction="#onHighLight" text="Vairable\Label Selector" />
          </children>
        </Pane>

      </children>
    </VBox>
  </top>

  <!-- CENTER -->
  <center>
    <SplitPane dividerPositions="0.62">
      <items>
        <fx:include fx:id="instructions" source="instructions.fxml" />

        <VBox spacing="8">
          <children>
            <fx:include fx:id="execution" source="execution.fxml" VBox.vgrow="ALWAYS" />
            <fx:include fx:id="history" source="history.fxml" />
          </children>
        </VBox>
      </items>
    </SplitPane>
  </center>

  <bottom>
    <HBox alignment="CENTER_LEFT" spacing="12">
      <children>
        <Label text="Engine:" />
        <Label fx:id="lblEngineState" text="Idle" />
        <Separator orientation="VERTICAL" />
        <Label text="Selection:" />
        <Label fx:id="lblSelection" text="â€”" />
        <Pane HBox.hgrow="ALWAYS" />
        <Label fx:id="lblStatus" text="" />
        <ProgressBar fx:id="progressBar" prefWidth="220.0" progress="0.0" />
        <Separator orientation="VERTICAL" />
        <Label text="FPS:" />
        <Label fx:id="lblFps" text="0" />
      </children>
      <padding>
        <Insets bottom="8" left="12" right="12" top="8" />
      </padding>
    </HBox>
  </bottom>
</BorderPane>
