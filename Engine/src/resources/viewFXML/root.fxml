<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane stylesheets="@semulator.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controllers.RootController">

    <!-- TOP BAR -->
    <top>
        <VBox spacing="8" BorderPane.alignment="CENTER_LEFT">
            <children>
                <ToolBar prefHeight="48">
                    <items>
                        <Button onAction="#onLoadFile" text="Load File" />
                        <Separator orientation="VERTICAL" />
                        <Label onMouseEntered="#mouseEnter" onMouseExited="#mouseExit" text="Currently Loaded:" />
                        <Label fx:id="lblFilePath" maxWidth="320" prefWidth="320" text="—" textOverrun="LEADING_ELLIPSIS" />
                        <Separator orientation="VERTICAL" />
                        <Button fx:id="btnCollapse" onAction="#onCollapse" text="Collapse" />
                        <HBox spacing="6">
                            <children>
                                <Label text="Degree:" />
                                <Spinner fx:id="spnDegree" editable="true">
                                    <valueFactory>
                                        <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="0" max="0" min="0" />
                                    </valueFactory>
                                </Spinner>
                                <Label fx:id="lblMaxDegree" text="/ 0" />
                            </children>
                        </HBox>
                        <Button fx:id="btnExpand" onAction="#onExpand" text="Expand" />
                        <Pane />
                    </items>
                </ToolBar>

                <!-- Summary line -->
                <HBox spacing="8">
                    <children>
                        <Label text="Summary:" />
                        <Label fx:id="lblSummary" text="Instructions: 0 | B/S: 0/0 | Cycles: 0" />
                    </children>
                    <padding>
                        <Insets bottom="10" left="12" right="12" top="10" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </top>

    <!-- CENTER -->
    <center>
        <SplitPane dividerPositions="0.62">
            <items>
                <fx:include fx:id="instructions" source="instructions.fxml" />
                <fx:include fx:id="execution" source="execution.fxml" />
            </items>
        </SplitPane>
    </center>


    <!-- BOTTOM: Status bar -->
    <bottom>
        <HBox spacing="12">
            <children>
                <Label text="Engine:" />
                <Label fx:id="lblEngineState" text="Idle" />
                <Separator orientation="VERTICAL" />
                <Label text="Selection:" />
                <Label fx:id="lblSelection" text="—" />
                <Pane />
                <Label text="FPS:" />
                <Label fx:id="lblFps" text="0" />
            </children>
            <padding>
                <Insets bottom="8" left="12" right="12" top="8" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
