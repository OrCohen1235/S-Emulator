<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import java.lang.String?>
<VBox xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.ExecutionController"
      VBox.vgrow="ALWAYS">

  <children>
    <TitledPane expanded="true" text="Debugger / Execution" VBox.vgrow="ALWAYS" maxHeight="Infinity">
      <content>
        <VBox spacing="8" VBox.vgrow="ALWAYS">
          <children>
            <ToolBar>
              <items>
                <Button fx:id="btnRun" onAction="#onRun" text="New Run" />
                <Button fx:id="btnDebug" onAction="#onDebug" text="Debug" />
                <Button fx:id="btnStepOver" onAction="#onStepOver" text="Step Over" />
                <Button fx:id="btnStop" onAction="#onStop" text="Stop" />
                <Button fx:id="btnResume" onAction="#onResume" text="Resume" />

                <!-- Separator -->
                <Separator orientation="VERTICAL" />
              </items>
            </ToolBar>

            <GridPane hgap="10" vgap="10" VBox.vgrow="ALWAYS">
              <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
              </columnConstraints>
              <rowConstraints>
                <!-- שורה ראשונה - תופסת 65% מהגובה -->
                <RowConstraints percentHeight="65" vgrow="ALWAYS" />
                <!-- שורה שנייה - תופסת 35% מהגובה -->
                <RowConstraints percentHeight="35" vgrow="SOMETIMES" />
              </rowConstraints>

              <!-- Variables -->
              <TitledPane expanded="true"
                          text="Variables"
                          maxHeight="Infinity"
                          GridPane.columnIndex="0"
                          GridPane.rowIndex="0"
                          GridPane.hgrow="ALWAYS"
                          GridPane.vgrow="ALWAYS">
                <content>
                  <fx:include fx:id="varsTable" source="varsTable.fxml" />
                </content>
              </TitledPane>

              <!-- Execution Inputs -->
              <TitledPane expanded="true"
                          text="Execution Inputs"
                          maxHeight="Infinity"
                          GridPane.columnIndex="1"
                          GridPane.rowIndex="0"
                          GridPane.hgrow="ALWAYS"
                          GridPane.vgrow="ALWAYS">
                <content>
                  <VBox spacing="6" VBox.vgrow="ALWAYS">
                    <children>
                      <ScrollPane fx:id="inputsScroll"
                                  fitToWidth="true"
                                  hbarPolicy="NEVER"
                                  vbarPolicy="AS_NEEDED"
                                  VBox.vgrow="ALWAYS"
                                  minHeight="150"
                                  maxHeight="Infinity">
                        <content>
                          <VBox fx:id="inputsContainer"
                                fillWidth="true"
                                spacing="6"
                                stylesheets="@execution.css" />
                        </content>
                      </ScrollPane>
                      <Pane VBox.vgrow="NEVER" minHeight="10" prefHeight="10"/>
                      <HBox fx:id="hBoxStart" alignment="TOP_CENTER">
                        <children>
                          <Button fx:id="btnStart" onAction="#onStart" text="Start" />
                        </children>
                      </HBox>
                    </children>
                  </VBox>
                </content>
              </TitledPane>

              <!-- Cycles -->
              <TitledPane expanded="true"
                          text="Cycles"
                          GridPane.columnIndex="0"
                          GridPane.columnSpan="2"
                          GridPane.rowIndex="1"
                          GridPane.hgrow="ALWAYS"
                          maxHeight="Infinity">
                <content>
                  <VBox spacing="8">
                    <children>
                      <HBox alignment="CENTER_LEFT" spacing="6">
                        <children>
                          <Label text="Total cycles:" />
                          <Label fx:id="lblCycles" text="0" />
                        </children>
                      </HBox>
                      <ProgressBar fx:id="prgExecution" maxWidth="Infinity" progress="0.0" />
                    </children>
                    <padding>
                      <Insets bottom="8" left="8" right="8" top="8" />
                    </padding>
                  </VBox>
                </content>
              </TitledPane>
            </GridPane>
          </children>
        </VBox>
      </content>
      <opaqueInsets>
        <Insets />
      </opaqueInsets>
    </TitledPane>
  </children>

  <padding>
    <Insets bottom="12" left="12" right="12" top="12" />
  </padding>
</VBox>